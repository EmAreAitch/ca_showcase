<section id="contact" class="relative py-24 bg-gradient-to-br from-primary via-background to-secondary overflow-hidden">
  <div class="relative max-w-3xl mx-auto px-6">
    <!-- Animated Title -->
    <h2 class="text-5xl font-extrabold text-center text-white mb-6">
      Get in Touch
